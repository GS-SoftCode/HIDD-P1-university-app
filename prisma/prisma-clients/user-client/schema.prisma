generator userClient {
  provider = "prisma-client-js"
  output   = "./prisma-clients/user-client"
}

datasource db_user {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  correo    String   @unique
  password  String
  rol       Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  DOCENTE
  ESTUDIANTE
}
